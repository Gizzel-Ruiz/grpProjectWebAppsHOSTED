<!--category 1 page-->

<!--Calls file with navbar-->
<%- include('layouts/cat1header.ejs') %>

<!-- posts -->
<!-- <h2 style="margin-top: 4rem; margin-bottom: 1.5rem; margin-left: 6rem;">Book Reviews</h2> -->
    <div class="container posts-container scroll" style="width: 900px; height: 730px;">
        <!--div to hold messages passed when profile page is loaded-->
        <div class="bookErrorMSG" style="color: red; font-weight: bold; font-size: 30px;">
        <%= bookErrorMSG %>
        </div>

        <div class="row row-cols-2" style="width: 700px">
            <!--cards for posts -->
            <%bookpostList.forEach(bookpost => {%>
            <div class="card post-card mb-5" style="width: 130%; margin-left: 15%;">
                <img src="img/<%= bookpost.imageName %>.jpg" class="card-img-top" alt="..." style="height: 450px; width: 350px;">
                <div class="card-body">
                <h5 class="card-title"> <%= bookpost.title %></h5>
                <p class="card-text"> <%= bookpost.description %> 
                </p>
                <p class="card-text"><small class="text-muted">Posted by <%= bookpost.userName %> </small>
                </p>
                <a class="upvote-button" role="button"><i class="bi bi-arrow-up-square"></i></a>
                <a class="downvote-button" role="button"><i class="bi bi-arrow-down-square"></i></a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- categories card -->
    <div class="button-cat-container">
        <a class="button" href="/post" role="button" style="margin-left: 5rem;">New Post
            <i class="bi bi-plus-square button-icon"></i>
        </a>
        <div class="card cats-card" style="width: 20rem; margin-top: 8rem;">
        <div class="card-header text-center">
            Categories
        </div>
        <ul class="list-group list-group-flush text-center">
            <a class="nav-link" href="/cat2" style="margin-top: 1.2rem;">Anime</a>
            <hr>
            <a class="nav-link" href="/feed" style="margin-bottom: 1.2rem;">Most Popular</a>
            
        </ul>
        </div>
    </div>
        

    <!-- my js -->
    <script src="phapp.js"></script>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

