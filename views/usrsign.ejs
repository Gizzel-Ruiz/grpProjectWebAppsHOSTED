<!--sign in page-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" connect="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!--Stylesheet-->
    <link rel="stylesheet" href="/css/style.css">
    <!--link to website's js file-->
    <script src="phapp.js"></script>
    <title>Document/signin</title>
</head>

<body>
    <div class="signin-container">
        <div class="signin-contents-row-div">
            <div class="container text-center">
                <div class="row">
                    <!--column for website logo-->
                    <div class="col justify-content-center" id="column1">
                        <div class="container" id="signinImgContainer">
                            <img src="/img/bookmei_small.png" alt="logo" id="logoimg">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!--column for registration details-->
                    <div class="col justify-content-center ">
                        <form class="form" id="register">
                            <h3 class="signin-form-title">Sign-In<br><br></h3>
                            <div class="mb-3">
                                <input type="text" class="form-control" autofocus id="exampleInputUserName" placeholder="username">
                            </div>
                            <div class="mb-3">
                              <input type="password" class="form-control" autofocus id="exampleInputPassword1" placeholder="password">
                            </div>
                            <div class="form-error-msg" id="formErrorMsg">
                                <label class="signinErrorLabel" id="signinErrorLabel">Incorrect username/password</label>
                            </div>
                            <div class="mb-3">
                              <label class="not-registered-label"><br>Not registered? <a href="/">Create Account</a><br><br></label>
                            </div>
                            <div class="mb-3">
                            <button type="button" class="button" id="signinButton" onClick="location.href='/feed'">Sign-in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--link to Bootstrap js file-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>

</html>