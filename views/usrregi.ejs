<!--registration page-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" connect="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!--Stylesheet-->
    <link rel="stylesheet" href="/css/style.css">
    <!--link to website's js file-->
    <script src="phapp.js"></script>
    <title>Document/register</title>
</head>

<body>
    <div class="registration-container">
        <div class="signup-contents-row-div">
            <div class="container text-center">
                <div class="row">
                    <!--column for website logo-->
                    <div class="col justify-content-center" id="column1">
                        <div class="container" id="regImgContainer">
                            <img src="/img/bookmei.png" alt="logo" id="logoimg">
                        </div>
                    </div>
                    <!--column for registration details-->
                    <div class="col justify-content-center ">
                        <form action="/submitRegister" method="post" class="form" id="register">
                            <h3 class="register-form-title">Register<br><br></h3>
                            <div class="mb-3">
                              <input type="email" class="form-control" autofocus name="userEmail" aria-describedby="emailHelp" placeholder="email" required>
                              <div id="emailHelp" class="form-emailHelp">We'll never share your email with anyone else.</div>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" autofocus name="userName" placeholder="username" required>
                            </div>
                            <div class="mb-3">
                              <input type="password" class="form-control" autofocus name="userPass" placeholder="password" required>
                            </div>
                            <div class="mb-3">
                              <label class="already-registered-label"><br>Already have an account? <a href="/usrsign">Sign in</a><br><br></label>
                            </div>
                            <div class="mb-3">
                            <button type="submit" class="button" id="regButton">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--link to Bootstrap js file-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>

</html>