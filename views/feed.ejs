<!--feed page-->

<!--Calls file with navbar-->
<%- include('layouts/feedheader.ejs') %>

<!-- posts -->

<!-- <h2 style="margin-top: 2rem; margin-bottom: 1.5rem; margin-left: 10rem;">Most Popular</h2> -->
    <div class="container posts-container scroll" style="width: 900px; height: 730px; display: flex;">
        <!--div to hold messages passed when profile page is loaded-->
        <div class="animeErrorMSG" style="color: red; font-weight: bold; font-size: 30px;">
            <%= editorsPickErrorMSG %>
            </div>
    
            <div class="row row-cols-2" style="width: 700px">
                <!--cards for posts -->
                <%editorspickList.forEach(editorspick => {%>
                <div class="card post-card mb-5" style="width: 130%; margin-left: 15%;">
                    <img src="img/<%= editorspick.imageName %>.jpg" class="card-img-top" alt="..." style="height: 450px; width: 350px;">
                    <div class="card-body">
                    <h5 class="card-title"> <%= editorspick.title %></h5>
                    <p class="card-text"> <%= editorspick.description %> 
                    </p>
                    <p class="card-text"><small class="text-muted">Posted by <%= editorspick.userName %> </small>
                    </p>
                    </div>
                </div>
                <% }) %>

        </div>
    </div>

    <!-- categories card -->
    <div class="button-cat-container">
        <a class="button" href="/post" role="button" style="margin-left: 5rem;">New Post
            <i class="bi bi-plus-square button-icon"></i>
        </a>
        <div class="card cats-card" style="width: 20rem; margin-top: 8rem;">
        <div class="card-header text-center">
            Categories
        </div>
        <ul class="list-group list-group-flush text-center">
            <a class="nav-link" href="/cat1" style="margin-top: 1.2rem;">Book Reviews</a>
            <hr>
            <a class="nav-link" href="/cat2" style="margin-bottom: 1.2rem;">Anime Reviews</a>
            
        </ul>
        </div>
    </div>


        
<!-- my js -->
<script src="phapp.js"></script>
